generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  sections    Section[]
  folders     Folder[]
  files       File[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Section {
  id        Int      @id @default(autoincrement())
  title     String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int
  topics    Topic[]
  folders   Folder[]
  files     File[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Topic {
  id        Int      @id @default(autoincrement())
  title     String
  section   Section  @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId Int
  folders   Folder[]
  files     File[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int?
  section   Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId Int?
  topic     Topic?   @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId   Int?
  files     File[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  id        Int      @id @default(autoincrement())
  filename  String
  content   String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int?
  section   Section? @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId Int?
  topic     Topic?   @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId   Int?
  folder    Folder?  @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
